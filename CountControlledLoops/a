import java.util.Scanner;

public class CountControlledLoops {
    public static void main(String[] args){
        //Count controlled iteration
        for (int i = 0; i < 11; i ++) {
            System.out.printf("i is currently %d \n", i);
        }

        Scanner scanner = new Scanner(System.in);
        System.out.println("What is your age? : ");
        String age = scanner.nextLine();
        int ageAsInt = Integer.parseInt(age);
        for (int j = 0; j < ageAsInt; j++) {
            System.out.printf("You have been %d year(s) old ! \n", j);
        }

        //Enhanced count controlled iteration
        int [] numbers = {1,2,3,4,5};
        for (int number : numbers) {
            System.out.println("Number is: " + number);
        }

        String [] words = {"hello", "my", "name", "is", "avika!"};
        for (String word : words) {
            System.out.println("Your current word : " + word);
        }

        //Condition controlled iteration
        int count = 0;
        while (count < 5){
            System.out.println("Count is: " + count);
            count++;
        }

        System.out.println("");

        int count2 = 20;
        do {
            System.out.println("Count is: " + count2);
            count2++;
        } while (count2<5);
    }
}
